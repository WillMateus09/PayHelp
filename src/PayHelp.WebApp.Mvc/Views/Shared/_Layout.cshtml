@using System.Security.Claims
@{
    var nome = User?.Identity?.IsAuthenticated == true ? User.FindFirst(ClaimTypes.Name)?.Value : null;
    var role = User?.Identity?.IsAuthenticated == true ? User.FindFirst(ClaimTypes.Role)?.Value : null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PayHelp - Sistema de Suporte</title>
    
    <!-- Bootstrap 5.3.3 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    
    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    
    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/payhelp-theme.css" />
    
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Navbar Moderna com Gradiente -->
    <nav class="navbar navbar-expand-lg navbar-payhelp fixed-top">
        <div class="container">
            <a class="navbar-brand brand-payhelp" href="@Url.Action("Index","Home")">
                <i class="fas fa-headset brand-icon"></i>
                <span class="brand-text">PayHelp</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="nav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link nav-link-modern" href="@Url.Action("Index","Home")">
                            <i class="fas fa-home me-1"></i> Home
                        </a>
                    </li>
                    @if(User?.Identity?.IsAuthenticated == true && role == "Simples"){
                        <li class="nav-item">
                            <a class="nav-link nav-link-modern" href="@Url.Action("Minhas","Tickets")">
                                <i class="fas fa-ticket-alt me-1"></i> Meus Chamados
                            </a>
                        </li>
                    }
                    @if(User?.Identity?.IsAuthenticated == true && role == "Suporte"){
                        <li class="nav-item">
                            <a class="nav-link nav-link-modern" href="@Url.Action("Dashboard","Support")">
                                <i class="fas fa-tachometer-alt me-1"></i> Suporte
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-modern" href="@Url.Action("Index","CannedMessages")">
                                <i class="fas fa-comments me-1"></i> Mensagens
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-modern" href="@Url.Action("Index","Reports")">
                                <i class="fas fa-chart-bar me-1"></i> Relatórios
                            </a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav align-items-center">
                    @if(User?.Identity?.IsAuthenticated == true){
                        @if (role == "Master")
                        {
                            <li class="nav-item me-3 dropdown">
                                <a class="nav-link nav-link-modern dropdown-toggle" href="#" id="adminMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-shield me-1"></i> Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminMenu">
                                    <li><a class="dropdown-item" href="@Url.Action("Users","Admin")"><i class="fas fa-users me-2"></i>Usuários</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Settings","Admin")"><i class="fas fa-sliders-h me-2"></i>Configurações</a></li>
                                </ul>
                            </li>
                        }
                        <li class="nav-item me-3">
                            <span class="user-greeting">
                                <i class="fas fa-user-circle me-1"></i> Olá, <strong>@nome</strong>
                            </span>
                        </li>
                        <li class="nav-item">
                            <form method="post" action="@Url.Action("Logout","Account")" class="d-inline">
                                <button class="btn btn-logout btn-sm">
                                    <i class="fas fa-sign-out-alt me-1"></i> Sair
                                </button>
                            </form>
                        </li>
                    } else {
                        <li class="nav-item me-2">
                            <a class="btn btn-login btn-sm" href="@Url.Action("Login","Account")">
                                <i class="fas fa-sign-in-alt me-1"></i> Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-register btn-sm" href="@Url.Action("Register","Account")">
                                <i class="fas fa-user-plus me-1"></i> Cadastrar
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- Main Content com padding adequado -->
    <main class="main-content container">
        @RenderBody()
    </main>

    <!-- Footer Moderno -->
    <footer class="footer-payhelp">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start mb-2 mb-md-0">
                    <p class="mb-0">
                        <i class="far fa-copyright"></i> 2025 <strong>PayHelp</strong> - Sistema de Suporte
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="@Url.Action("Privacy","Home")" class="footer-link">
                        <i class="fas fa-shield-alt me-1"></i> Política de Privacidade
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>