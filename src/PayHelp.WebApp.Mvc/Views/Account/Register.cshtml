@model PayHelp.WebApp.Mvc.ViewModels.RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-container">
    <div class="row align-items-center justify-content-center min-vh-100 py-5">
        <div class="col-lg-10">
            <div class="auth-card">
                <div class="row g-0">
                    <!-- Lado Esquerdo - Informações -->
                    <div class="col-lg-6 auth-left">
                        <div class="auth-branding">
                            <div class="brand-icon-large">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <h2 class="brand-title">Junte-se ao PayHelp</h2>
                            <p class="brand-subtitle">Crie sua conta e comece a usar</p>
                        </div>
                        
                        <div class="auth-features">
                            <div class="feature-item">
                                <i class="fas fa-shield-alt"></i>
                                <div>
                                    <h5>Seguro e Confiável</h5>
                                    <p>Seus dados protegidos com criptografia</p>
                                </div>
                            </div>
                            <div class="feature-item">
                                <i class="fas fa-rocket"></i>
                                <div>
                                    <h5>Rápido e Fácil</h5>
                                    <p>Cadastro em menos de 2 minutos</p>
                                </div>
                            </div>
                            <div class="feature-item">
                                <i class="fas fa-headset"></i>
                                <div>
                                    <h5>Suporte Premium</h5>
                                    <p>Equipe pronta para ajudar você</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Lado Direito - Formulário -->
                    <div class="col-lg-6 auth-right">
                        <div class="auth-form-wrapper">
                            <div class="auth-header">
                                <h3 class="auth-title">
                                    <i class="fas fa-user-circle me-2"></i>
                                    Criar Conta
                                </h3>
                                <p class="auth-description">Preencha os dados abaixo para começar</p>
                            </div>

                            <form method="post" class="auth-form">
                                <!-- Tipo de Usuário -->
                                <div class="mb-4">
                                    <label class="form-label-auth mb-3">
                                        <i class="fas fa-user-tag me-2"></i>
                                        Tipo de Conta
                                    </label>
                                    <div class="user-type-selector">
                                        <label class="user-type-option">
                                            <input type="radio" id="tipoSimples" name="TipoUsuario" value="Simples" checked />
                                            <div class="user-type-card">
                                                <i class="fas fa-user"></i>
                                                <span>Usuário</span>
                                                <p>Abrir e acompanhar chamados</p>
                                            </div>
                                        </label>
                                        <label class="user-type-option">
                                            <input type="radio" id="tipoSuporte" name="TipoUsuario" value="Suporte" />
                                            <div class="user-type-card">
                                                <i class="fas fa-headset"></i>
                                                <span>Suporte</span>
                                                <p>Atender e resolver chamados</p>
                                            </div>
                                        </label>
                                    </div>
                                </div>

                                <!-- Número de Inscrição -->
                                <div class="mb-4">
                                    <label class="form-label-auth">
                                        <i class="fas fa-id-card me-2"></i>
                                        Número de Inscrição
                                    </label>
                                    <input class="form-control form-control-auth" 
                                           asp-for="NumeroInscricao" 
                                           placeholder="Ex: 123456" />
                                    <span class="text-danger validation-message" asp-validation-for="NumeroInscricao"></span>
                                </div>

                                <!-- Nome -->
                                <div class="mb-4">
                                    <label class="form-label-auth">
                                        <i class="fas fa-signature me-2"></i>
                                        Nome Completo
                                    </label>
                                    <input class="form-control form-control-auth" 
                                           asp-for="Nome" 
                                           placeholder="Seu nome completo" />
                                    <span class="text-danger validation-message" asp-validation-for="Nome"></span>
                                </div>

                                <!-- E-mail -->
                                <div class="mb-4">
                                    <label class="form-label-auth">
                                        <i class="fas fa-envelope me-2"></i>
                                        E-mail
                                    </label>
                                    <input class="form-control form-control-auth" 
                                           type="email"
                                           asp-for="Email" 
                                           placeholder="seu@email.com" />
                                    <span class="text-danger validation-message" asp-validation-for="Email"></span>
                                </div>

                                <!-- Senha -->
                                <div class="mb-4">
                                    <label class="form-label-auth">
                                        <i class="fas fa-lock me-2"></i>
                                        Senha
                                    </label>
                                    <div class="password-input-wrapper">
                                        <input class="form-control form-control-auth" 
                                               type="password" 
                                               id="password"
                                               asp-for="Senha" 
                                               placeholder="Mínimo 6 caracteres" />
                                        <button type="button" class="password-toggle" onclick="togglePassword()">
                                            <i class="fas fa-eye" id="toggleIcon"></i>
                                        </button>
                                    </div>
                                    <span class="text-danger validation-message" asp-validation-for="Senha"></span>
                                </div>

                                <!-- Verificação de Suporte -->
                                <div class="mb-4" id="verificationSection">
                                    <label id="labelVerificacao" class="form-label-auth">
                                        <i class="fas fa-key me-2"></i>
                                        Código de Verificação
                                    </label>
                                    <input id="inputVerificacao" 
                                           class="form-control form-control-auth" 
                                           asp-for="Verificacao" 
                                           placeholder="Digite o código de verificação" 
                                           disabled />
                                    <small id="hintVerificacao" class="form-help-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Disponível apenas para contas de suporte
                                    </small>
                                </div>

                                <div class="text-danger mb-3">@Html.ValidationSummary()</div>

                                <button class="btn btn-auth-primary w-100 mb-3" type="submit">
                                    <i class="fas fa-check-circle me-2"></i>
                                    Criar Minha Conta
                                </button>

                                <div class="auth-divider">
                                    <span>Já tem uma conta?</span>
                                </div>

                                <a href="@Url.Action("Login", "Account")" class="btn btn-auth-secondary w-100">
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    Fazer Login
                                </a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

        function applyMode() {
            const isSuporte = document.getElementById('tipoSuporte').checked;
            const input = document.getElementById('inputVerificacao');
            const label = document.getElementById('labelVerificacao');
            const hint = document.getElementById('hintVerificacao');
            const section = document.getElementById('verificationSection');
            
            if (isSuporte) {
                input.removeAttribute('disabled');
                input.placeholder = 'Digite o código fornecido pelo administrador';
                section.classList.add('verification-active');
                hint.innerHTML = '<i class="fas fa-shield-alt me-1"></i>Informe o código fornecido pelo administrador do sistema';
            } else {
                input.setAttribute('disabled', 'disabled');
                input.value = '';
                input.placeholder = 'Disponível apenas para contas de suporte';
                section.classList.remove('verification-active');
                hint.innerHTML = '<i class="fas fa-info-circle me-1"></i>Disponível apenas para contas de suporte';
            }
        }
        
        document.getElementById('tipoSimples').addEventListener('change', applyMode);
        document.getElementById('tipoSuporte').addEventListener('change', applyMode);
        applyMode();
    </script>
}
