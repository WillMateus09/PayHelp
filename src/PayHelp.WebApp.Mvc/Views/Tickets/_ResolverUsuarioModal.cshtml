@model dynamic
<div class="modal" id="resolverUsuarioModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form method="post" asp-action="MarcarResolvido" asp-route-ticketId="@Model.TicketId">
        <div class="modal-header">
          <h5 class="modal-title">Marcar como Resolvido</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label>Nota (1–5)</label>
            <input asp-for="NotaUsuario" class="form-control" type="number" min="1" max="5" />
            <span asp-validation-for="NotaUsuario" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label>Comentário</label>
            <textarea asp-for="FeedbackUsuario" class="form-control" rows="3" maxlength="1000"></textarea>
            <span asp-validation-for="FeedbackUsuario" class="text-danger"></span>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Enviar</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
        </div>
      </form>
    </div>
  </div>
</div>
*@