<?xml version="1.0" encoding="UTF-8"?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PayHelp.Mobile.Maui.Views"
    x:Class="PayHelp.Mobile.Maui.UserShell"
    Title="PayHelp">

    <TabBar>
        <ShellContent Title="Início" Route="home" ContentTemplate="{DataTemplate views:UserHomePage}" />
        <ShellContent Title="Meus Chamados" Route="chamados" ContentTemplate="{DataTemplate views:ChamadosPage}" />
    </TabBar>

    <!-- Rotas adicionais (não exibidas) -->
    <ShellContent Route="abrir-chamado" ContentTemplate="{DataTemplate views:AbrirChamadoPage}" />
    <ShellContent Route="chamado-detalhe" ContentTemplate="{DataTemplate views:ChamadoDetalhePage}" />

</Shell>
