<?xml version="1.0" encoding="UTF-8"?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:PayHelp.Mobile.Maui.Converters"
             x:Class="PayHelp.Mobile.Maui.App">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
      </ResourceDictionary.MergedDictionaries>
      
      <!-- Converters -->
      <converters:BoolToStatusColorConverter x:Key="BoolToStatusColorConverter" />
      <converters:BoolToStatusTextConverter x:Key="BoolToStatusTextConverter" />
      <converters:BoolToBlockButtonTextConverter x:Key="BoolToBlockButtonTextConverter" />
      <converters:BoolToBlockButtonColorConverter x:Key="BoolToBlockButtonColorConverter" />
      <converters:IsNotNullOrEmptyConverter x:Key="IsNotNullOrEmptyConverter" />
    </ResourceDictionary>
  </Application.Resources>
</Application>
