<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PayHelp.Mobile.Maui.Views.FeedbackModalPage"
             BackgroundColor="Transparent">
    
    <ContentPage.Content>
        <Grid BackgroundColor="#80000000" Padding="20">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnFecharClicked"/>
            </Grid.GestureRecognizers>
            
            <!-- Modal Container -->
            <Frame BackgroundColor="White"
                   CornerRadius="16"
                   Padding="24"
                   MaximumWidthRequest="400"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   HasShadow="True">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer/>
                </Frame.GestureRecognizers>
                
                <VerticalStackLayout Spacing="20">
                    <!-- Título -->
                    <Label Text="Feedback do Usuário"
                           Style="{StaticResource Headline}"
                           HorizontalOptions="Center"/>
                    
                    <!-- Estrelas -->
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                        <Label x:Name="Star1" Text="★" FontSize="32" TextColor="#FFC107"/>
                        <Label x:Name="Star2" Text="★" FontSize="32" TextColor="#FFC107"/>
                        <Label x:Name="Star3" Text="★" FontSize="32" TextColor="#FFC107"/>
                        <Label x:Name="Star4" Text="★" FontSize="32" TextColor="#FFC107"/>
                        <Label x:Name="Star5" Text="★" FontSize="32" TextColor="#FFC107"/>
                    </HorizontalStackLayout>
                    
                    <!-- Nota -->
                    <Label x:Name="LblNota"
                           Text="5/5"
                           FontSize="16"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource Primary}"/>
                    
                    <!-- Data de Resolução -->
                    <Label x:Name="LblData"
                           Text="Resolvido em: 15/01/2024 14:30"
                           Style="{StaticResource Caption}"
                           HorizontalOptions="Center"/>
                    
                    <!-- Separador -->
                    <BoxView HeightRequest="1" 
                             BackgroundColor="{StaticResource Gray200}"
                             HorizontalOptions="Fill"/>
                    
                    <!-- Comentário -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Comentário:"
                               Style="{StaticResource Body}"
                               FontAttributes="Bold"/>
                        
                        <Border BackgroundColor="{StaticResource Gray100}"
                                StrokeThickness="1"
                                Stroke="{StaticResource Gray300}"
                                Padding="12">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            
                            <Label x:Name="LblComentario"
                                   Text="Excelente atendimento!"
                                   Style="{StaticResource Body}"
                                   LineBreakMode="WordWrap"/>
                        </Border>
                    </VerticalStackLayout>
                    
                    <!-- Botão Fechar -->
                    <Button Text="Fechar"
                            Style="{StaticResource SmallButton}"
                            Clicked="OnFecharClicked"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>
