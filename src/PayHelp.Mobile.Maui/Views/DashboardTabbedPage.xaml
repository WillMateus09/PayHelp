<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:PayHelp.Mobile.Maui.Views"
             x:Class="PayHelp.Mobile.Maui.Views.DashboardTabbedPage"
             Title="Dashboard"
             Appearing="ContentPage_Appearing">
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*" Padding="0">
        <!-- Toolbar simulada -->
        <HorizontalStackLayout Padding="12,8" 
                             Spacing="12" 
                             BackgroundColor="{DynamicResource SecondaryDark}"
                             HeightRequest="56">
            <Button x:Name="BtnChamados" 
                    Text="ðŸ“‹ Chamados" 
                    Clicked="ToolbarChamados_Clicked" 
                    Style="{DynamicResource SmallButton}"
                    FontSize="14"
                    FontAttributes="Bold"
                    Padding="16,8"/>
            <Button x:Name="BtnFeedbacks" 
                    Text="â­ Feedbacks" 
                    Clicked="ToolbarFeedbacks_Clicked" 
                    Style="{DynamicResource SmallButton}"
                    FontSize="14"
                    FontAttributes="Bold"
                    Padding="16,8"/>
            <Label x:Name="LblStatus" 
                   Text="" 
                   HorizontalOptions="EndAndExpand" 
                   VerticalOptions="Center" 
                   Style="{DynamicResource Caption}" />
        </HorizontalStackLayout>
        <ContentView x:Name="Host" Grid.Row="1">
            <Grid>
                <views:ChamadosPage x:Name="PageChamados" />
                <views:FeedbacksPage x:Name="PageFeedbacks" IsVisible="False" />
            </Grid>
        </ContentView>
    </Grid>
</ContentPage>
