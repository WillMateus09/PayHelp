@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 text-center text-lg-start">
                <h1 class="hero-title animate-fade-in">
                    Bem-vindo ao <span class="text-gradient">MeuProjeto</span>
                </h1>
                <p class="hero-subtitle animate-fade-in-delay">
                    Uma aplicação moderna construída com ASP.NET Core MVC
                </p>
                <div class="hero-buttons animate-fade-in-delay-2">
                    <a href="https://learn.microsoft.com/aspnet/core" target="_blank" class="btn btn-primary btn-modern btn-lg me-3">
                        <i class="fas fa-rocket me-2"></i> Começar
                    </a>
                    <a href="#features" class="btn btn-outline-primary btn-modern btn-lg">
                        <i class="fas fa-info-circle me-2"></i> Saiba Mais
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center animate-fade-in-delay">
                <div class="hero-illustration">
                    <i class="fas fa-laptop-code"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<section id="features" class="features-section">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="section-title">Recursos Principais</h2>
            <p class="section-subtitle">Explore as funcionalidades do nosso projeto</p>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-rocket"></i>
                    </div>
                    <h3 class="feature-title">Performance</h3>
                    <p class="feature-description">
                        Aplicação otimizada para alta performance e velocidade de carregamento
                    </p>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3 class="feature-title">Segurança</h3>
                    <p class="feature-description">
                        Implementação de práticas modernas de segurança e proteção de dados
                    </p>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <h3 class="feature-title">Responsivo</h3>
                    <p class="feature-description">
                        Design totalmente responsivo que funciona em todos os dispositivos
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Info Section -->
<section class="info-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <div class="info-icon-large">
                    <i class="fas fa-code"></i>
                </div>
            </div>
            <div class="col-lg-6">
                <h2 class="info-title">Desenvolvido com ASP.NET Core</h2>
                <p class="info-text">
                    Aprenda a construir aplicações web robustas e escaláveis utilizando 
                    o framework ASP.NET Core MVC. Explore a documentação oficial e descubra 
                    todo o potencial desta tecnologia.
                </p>
                <a href="https://learn.microsoft.com/aspnet/core" target="_blank" class="btn btn-primary btn-modern">
                    <i class="fas fa-book me-2"></i> Acessar Documentação
                </a>
            </div>
        </div>
    </div>
</section>
